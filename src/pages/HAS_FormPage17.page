<apex:page docType="html-5.0" showHeader="false" sidebar="false" standardStyleSheets="false" standardController="Case" extensions="bg_NominationSupportersExtension">
	<c:bg_SetPropertyComponent from="{!$CurrentPage.Name}" to="{!CurrentPageName}" />
    <apex:composition template="{!$Site.Template}">

        <apex:define name="title">
            <title>{!$Label.HAS_Label}</title>
        </apex:define>

        <apex:define name="header-proposition">
    			<nav>
    				<a href="/" id="proposition-name">{!$Label.HAS_RCL_Label}</a>
    				<apex:define name="login-proposition">
    					<c:HAS_Community_Proposition />
    				</apex:define>
    			</nav>
    		</apex:define>

        <apex:define name="global-breadcrumb">
               <li><a href="{!$Label.HAS_Home_Page}">{!$Label.HAS_Home_Label}</a></li>
               <li><strong>{!$Label.HAS_Nomination_Form}</strong></li>
        </apex:define>

        <apex:define name="pageErrors">
            <c:HAS_Page_Messages />
        </apex:define>

        <apex:define name="mainContent">
		<div class="grid-row">
			<div class="column-two-thirds">
		            <apex:outputPanel layout="block" styleClass="inner">
		                <apex:outputPanel layout="block" id="content" styleClass="home">
		                    <apex:form styleClass="main">

			                    <h1 class="heading-medium">
			                        <apex:outputText value="{!$Label.HAS_Form_Page_17_Title}" />
			                    </h1>

								<apex:outputText value="{!$Label.HAS_Form_Page_17_Text}" escape="false"/>

		                        <apex:outputPanel styleClass="form-group" layout="block" rendered="{!!readOnlyMode}">
		                          <apex:commandLink value="{!$Label.HAS_Add_More_Supporters}" action="{!openSupporterForm}" reRender="supportersTable" rendered="{!!readOnlyMode}"/>
		                        </apex:outputPanel>

								<apex:outputPanel rendered="{!!supporters.empty}" id="supporterList">
			                        <apex:dataTable value="{!supporters}" var="supporter" id="supportersTable" styleClass="clrDataTable">

			                          <apex:repeat value="{!$ObjectType.Supporter__c.FieldSets.supporters}" var="field">
			                              <apex:column title="{!field.Label}" headervalue="{!field.Label}" value="{!supporter[field]}" headerClass="" />

			                          </apex:repeat>
			                            <apex:column rendered="{!!readOnlyMode}">

			                              <apex:commandLink action="{!editSupporter}" value="Edit" id="editSupporter" immediate="TRUE">
			                                <apex:param name="editSupporterId" assignTo="{!supporterId}" value="{!supporter.Id}"  />
			                              </apex:commandLink>
			                             <br />
			                             <apex:commandLink action="{!deleteSupporter}" value="Delete" id="deleteSupporter" immediate="TRUE">
			                              <apex:param name="delSupporterId" assignTo="{!supporterId}" value="{!supporter.Id}" />
			                            </apex:commandLink>
			                            </apex:column>
			                        </apex:dataTable>
								</apex:outputPanel>

		                      <br />

		                        <apex:outputPanel styleClass="formGroup" layout="block">
		                           <apex:commandButton styleClass="clrButton" action="{!saveRecords}" value="{!$Label.HAS_Save_And_Continue_Label}" id="saveStep5" rendered="{!!readOnlyMode}" />
		                            <br />
		                            <br />
		                            <apex:commandLink action="{!previousPage}" value="{!$Label.HAS_Previous_Label}" id="prevStep5" immediate="TRUE" />
		                         <!-- Read only
		                            <apex:commandButton styleClass="clrButton" action="{!movePageForeward}" value="{!$Label.HAS_Next_Label}" id="advanceStep5" rendered="{!readOnlyMode}" /> -->

		                        </apex:outputPanel>

		                    </apex:form>
		                </apex:outputPanel>
		            </apex:outputPanel>
		            <script type="text/javascript" charset="utf-8">

		                jQuery(document).ready(function($)
		                {
		                    $("[makeReadOnly='true']").attr('disabled', 'disabled');
		                });
		            </script>
			</div>
		</div>
        </apex:define>

    </apex:composition>
</apex:page>